<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Zephyr | Edit</title>
    <link rel="icon" href="/images/favicon.jpg">
    <link rel="stylesheet" href="/style/edit.css" />
    <link href="https://fonts.googleapis.com/css2?family=Anton&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700;800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<body>

    <!-- Header -->
    <header>
        <a href="/home" class="logo">Zephyr</a>
        <nav class="right-section">
            <a href="/home">Home</a>
            <a href="/create">Create Post</a>
        </nav>
    </header>


    <!-- Edit Form -->
    <div class="container">
        <h2>Edit Post</h2>
        <% if (currentUser && post && (isAdmin || (post.author && post.author.toString() === currentUser._id.toString()))) { %>
        <form action="/home/<%= post._id %>/edit" method="POST">
            <div class="form-group">
                <label for="title">Title</label><br>
                <input type="text" name="title" id="title" value="<%= post.title %>" required
                    style="width: 100%; padding: 0.5rem; margin-top: 0.25rem;" />
            </div>
            <br>
            <div class="form-group">
                <label for="body">Body</label><br>
                <textarea name="body" id="body" rows="6" required
                    style="width: 100%; padding: 0.5rem; margin-top: 0.25rem; resize: none;"><%= post.body %></textarea>
            </div>
            <br>
            <div class="form-group">
                <label for="imageUrl">Image URL</label><br>
                <input type="text" name="imageUrl" id="imageUrl" value="<%= post.imageUrl %>"
                    style="width: 100%; padding: 0.5rem; margin-top: 0.25rem;" />
            </div>
            <br>
            <button type="submit" class="edit-btn">Update</button>
        </form>
        <% } else { %>
            <p>You are not authorized to edit this post.</p>
        <% } %>
    </div>

</body>

</html>